            <button type="submit" class="btn btn-primary" >Submit</button>
        </form>

        <div class="category">
            <label for="">
                Category
            </label>
            <br>
            <select name="category" id="category_select">
                {% for c in category %}
                    <option value="{{ c.id }}" {% if category_ID == c.id %} selected {% endif %} >{{ c.name }}</option>
                {% endfor %}
            </select>
        </div>
        {% if category_attr is not null %}
